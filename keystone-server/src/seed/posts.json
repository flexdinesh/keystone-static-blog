              ]
            },
            {
              "type": "list-item",
              "children": [
                {
                  "type": "list-item-content",
                  "children": [
                    {
                      "text": "test if "
                    },
                    {
                      "text": "Hello, User!",
                      "code": true
                    },
                    {
                      "text": "is rendered when user prop is not passed"
                    }
                  ]
                }
