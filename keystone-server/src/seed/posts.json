                {
                  "type": "list-item-content",
                  "children": [
                    {
                      "text": "test if the text changes to "
                    },
                    {
                      "text": "Hello, Pinocchio!",
                      "code": true
                    },
                    {
                      "text": "when the user clicks on the element"
                    }
                  ]
                }
              ]
            }
